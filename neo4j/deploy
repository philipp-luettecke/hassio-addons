
MAJOR="$(grep version config.json | sed 's/\s\"version\": "\([0-9]\+.[0-9]\+.[0-9]\+\)\",/\1/' | sed 's/\s\([0-9]\+\).*/\1/')"
MINOR="$(grep version config.json | sed 's/\s\"version\": "\([0-9]\+.[0-9]\+.[0-9]\+\)\",/\1/' | sed 's/\s[0-9]\+.\([0-9]\+\).*/\1/')"
PATCH="$(grep version config.json | sed 's/\s\"version\": "\([0-9]\+.[0-9]\+.[0-9]\+\)\",/\1/' | sed 's/\s[0-9]\+.[0-9]\+.\([0-9]\+\)/\1/')"

for i in "$@"
do
case $i in
    --major)
    ((MAJOR=MAJOR+1))
    ((MINOR=0))
    ((PATCH=0))
    shift # past argument=value
    ;;
    --minor)
    ((MINOR=MINOR+1))
    ((PATCH=0))
    shift # past argument=value
    ;;
    --patch)
    ((PATCH=PATCH+1))
    shift # past argument=value
    ;;
    *)
          # unknown option
    ;;
esac
done

VERSION="$MAJOR.$MINOR.$PATCH"

docker build . -t philippluettecke/hassio-neo4j-armv7:"$VERSION"

# Update Version in Config.json
sed -i "s/\"version\": \"[0-9]\+\(.[0-9]\+\)\+\"/\"version\": \"$VERSION\"/g" config.json

# Update Version shield in global README.md
sed -i "s@^\[neo4j-version-shield\].*@[neo4j-version-shield]: https://img.shields.io/badge/version-v$VERSION-blue.svg@" ../README.md

# Push changes to Git and Docker Hub
git add config.json ../README.md
git commit -m "Update Neo4J Addon to Version $VERSION"
docker tag philippluettecke/hassio-neo4j-armv7:"$VERSION" philippluettecke/hassio-neo4j-armv7:latest
docker push philippluettecke/hassio-neo4j-armv7:"$VERSION"
docker push philippluettecke/hassio-neo4j-armv7:latest
git push
echo
echo Successfully Updated Neo4J addon to Version $VERSION
